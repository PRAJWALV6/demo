        "import streamlit as st\n",
        "import openai\n",
        "\n",
        "def spin_chapter(content):\n",
        "    if not content.strip():\n",
        "        return \"\"\n",
        "\n",
        "    response = openai.ChatCompletion.create(\n",
        "        model=\"gpt-4\",\n",
        "        messages=[\n",
        "            {\"role\": \"system\", \"content\": \"You are a creative ghostwriter. Rewrite the content with clearer language.\"},\n",
        "            {\"role\": \"user\", \"content\": f\"Rewrite this creatively:\\n\\n{content}\"}\n",
        "        ]\n",
        "    )\n",
        "    return response.choices[0].message.content\n",
        "\n",
        "st.title(\"ğŸ“š AI Book Chapter Spinner\")\n",
        "\n",
        "original = st.text_area(\"âœï¸ Original Chapter Content\", height=300)\n",
        "\n",
        "if st.button(\"ğŸ” Generate AI-Spun Version\"):\n",
        "    if original.strip() == \"\":\n",
        "        st.warning(\"âš ï¸ Please enter some content to spin.\")\n",
        "    else:\n",
        "        ai_version = spin_chapter(original)\n",
        "        st.session_state[\"spun_content\"] = ai_version\n",
        "        st.success(\"âœ… AI-spun version generated.\")\n",
        "\n",
        "if \"spun_content\" in st.session_state:\n",
        "    human_edit = st.text_area(\n",
        "        \"ğŸ“ AI-Spun Version (Editable)\",\n",
        "        st.session_state[\"spun_content\"],\n",
        "        height=300,\n",
        "        key=\"editable_text\"\n",
        "    )\n",
        "\n",
