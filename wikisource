        "def reward_function(original, ai_version, human_edit):\n",
        "\n",
        "    similarity = compute_similarity(ai_version, human_edit)\n",
        "    originality = measure_originality(human_edit)\n",
        "    reward = (0.6 * originality) + (0.4 * similarity)\n",
        "\n",
        "    return reward\n"
